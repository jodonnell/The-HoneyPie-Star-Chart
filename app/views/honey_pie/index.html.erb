  <div id="stars">
    <% @user.stars.times do %>
      <%= image_tag "images/rating-star.gif" %>
    <% end %>
  </div>

<div id="main">

  <%= form_tag('/enter_time', :method => "get") do %>
  <p>
    <%= label_tag(:user_yoga, "Yoga") %>
    <%= text_field(:user, :yoga) %>
  </p>

  <p>
    <%= label_tag(:user_gym, "Gym") %>
    <%= text_field(:user, :gym) %>
  </p>

  <p>
    <%= label_tag(:user_meditation, "Meditation") %>
    <%= text_field(:user, :meditation) %>
  </p>

  <p>
    <%= submit_tag("Submit") %>
  </p>
  <% end %>

  <br/>
  <%= link_to "Buy Movie Ticket", buy_path(:what => :movie_ticket)%>
